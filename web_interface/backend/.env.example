# ==================== 基础配置 ====================
# 项目名称
PROJECT_NAME=TradeMaster Web Interface
# 版本号
VERSION=1.0.0
# API版本路径
API_V1_STR=/api/v1
# 调试模式（开发环境设为true，生产环境设为false）
DEBUG=true

# ==================== 服务器配置 ====================
# 服务器绑定地址
SERVER_HOST=0.0.0.0
# 服务器端口
SERVER_PORT=8000

# CORS允许的源地址（逗号分隔）
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# 允许的主机列表（逗号分隔）
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ==================== 安全配置 ====================
# JWT签名密钥（生产环境必须更改为复杂的随机字符串）
SECRET_KEY=your-super-secret-key-change-in-production-please-use-long-random-string

# 访问令牌过期时间（分钟）
ACCESS_TOKEN_EXPIRE_MINUTES=30
# 刷新令牌过期时间（天）
REFRESH_TOKEN_EXPIRE_DAYS=7
# JWT算法
ALGORITHM=HS256

# 密码策略
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=true

# ==================== 数据库配置 ====================
# PostgreSQL数据库服务器地址
POSTGRES_SERVER=localhost
# 数据库用户名
POSTGRES_USER=postgres
# 数据库密码
POSTGRES_PASSWORD=password
# 数据库名称
POSTGRES_DB=trademaster_web
# 数据库端口
POSTGRES_PORT=5432

# 数据库连接池配置
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ==================== Redis配置 ====================
# Redis服务器地址
REDIS_HOST=localhost
# Redis端口
REDIS_PORT=6379
# Redis数据库编号
REDIS_DB=0
# Redis密码（如果有的话）
REDIS_PASSWORD=
# 是否使用SSL连接Redis
REDIS_SSL=false

# 缓存配置
CACHE_EXPIRE_SECONDS=3600
CACHE_KEY_PREFIX=trademaster:

# ==================== Celery任务队列配置 ====================
# Celery任务超时时间（秒）
CELERY_TASK_TIMEOUT=1800
# Celery最大重试次数
CELERY_MAX_RETRIES=3

# ==================== TradeMaster集成配置 ====================
# TradeMaster Flask API地址
TRADEMASTER_API_URL=http://localhost:8080
# TradeMaster API请求超时时间（秒）
TRADEMASTER_API_TIMEOUT=300
# TradeMaster API重试次数
TRADEMASTER_API_RETRY_ATTEMPTS=3
# TradeMaster API重试延迟（秒）
TRADEMASTER_API_RETRY_DELAY=5

# ==================== 文件存储配置 ====================
# 文件上传目录
UPLOAD_DIR=uploads
# 最大上传文件大小（字节，默认100MB）
MAX_UPLOAD_SIZE=104857600
# 允许上传的文件扩展名（逗号分隔）
ALLOWED_EXTENSIONS=.csv,.json,.xlsx,.xls,.parquet

# 存储目录配置
DATA_DIR=data
MODEL_DIR=models
LOG_DIR=logs

# ==================== 日志配置 ====================
# 日志级别
LOG_LEVEL=INFO
# 日志格式
LOG_FORMAT=json
# 单个日志文件最大大小（字节，默认10MB）
LOG_FILE_MAX_SIZE=10485760
# 日志文件备份数量
LOG_FILE_BACKUP_COUNT=5

# ==================== 监控配置 ====================
# Sentry DSN（错误监控，可选）
SENTRY_DSN=
# 是否启用指标收集
ENABLE_METRICS=true
# Prometheus指标端口
METRICS_PORT=9090

# ==================== 邮件配置 ====================
# SMTP配置
SMTP_TLS=true
SMTP_SSL=false
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# 发件人信息
EMAILS_FROM_EMAIL=noreply@trademaster.ai
EMAILS_FROM_NAME=TradeMaster Team

# ==================== API限流配置 ====================
# 是否启用API限流
RATE_LIMIT_ENABLED=true
# 每分钟API调用限制
RATE_LIMIT_PER_MINUTE=100
# 突发请求限制
RATE_LIMIT_BURST=20

# ==================== WebSocket配置 ====================
# 是否启用WebSocket
WEBSOCKET_ENABLED=true
# WebSocket最大连接数
WEBSOCKET_MAX_CONNECTIONS=100
# WebSocket心跳间隔（秒）
WEBSOCKET_HEARTBEAT_INTERVAL=30

# ==================== 数据处理配置 ====================
# 数据处理块大小
DATA_PROCESSING_CHUNK_SIZE=10000
# 数据处理最大工作进程数
DATA_PROCESSING_MAX_WORKERS=4

# ==================== 模型训练配置 ====================
# 最大并发训练任务数
TRAINING_MAX_CONCURRENT_JOBS=2
# 训练检查点保存间隔
TRAINING_CHECKPOINT_INTERVAL=100
# 早停机制的耐心值
TRAINING_EARLY_STOPPING_PATIENCE=10

# ==================== 开发环境特殊配置 ====================
# 是否在开发环境中自动重载
AUTO_RELOAD=true
# 是否显示详细错误信息
SHOW_ERROR_DETAILS=true
# 是否启用API文档
ENABLE_DOCS=true

# ==================== 生产环境特殊配置 ====================
# 生产环境下以下配置应该设置：
# DEBUG=false
# SECRET_KEY=请使用强随机密钥
# POSTGRES_PASSWORD=请使用强密码
# REDIS_PASSWORD=请设置Redis密码
# SENTRY_DSN=请配置错误监控
# SMTP_配置=请配置邮件服务
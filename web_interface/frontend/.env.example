# ==================== TradeMaster Web Frontend 环境变量配置示例 ====================
# 前端应用专用环境变量配置
# 这些变量主要由React/Vite前端应用使用

# ==================== 基础应用配置 ====================
# 应用信息
VITE_APP_NAME=TradeMaster Web
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=TradeMaster Web Interface Frontend

# 环境标识
NODE_ENV=production
VITE_APP_ENV=production
VITE_MODE=production

# ==================== API服务配置 ====================
# 后端API服务地址
VITE_API_BASE_URL=https://api.yourdomain.com/api/v1
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# WebSocket连接配置
VITE_WS_URL=wss://api.yourdomain.com/ws
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=3000
VITE_WS_HEARTBEAT_INTERVAL=30000

# ==================== 应用功能配置 ====================
# 调试和开发配置
VITE_DEBUG=false
VITE_DEBUG_REDUX=false
VITE_DEBUG_API=false
VITE_SHOW_DEV_TOOLS=false

# 功能开关
VITE_ENABLE_PWA=true
VITE_ENABLE_SW=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true

# ==================== 认证配置 ====================
# JWT令牌配置
VITE_TOKEN_STORAGE_KEY=trademaster_token
VITE_REFRESH_TOKEN_KEY=trademaster_refresh_token
VITE_TOKEN_EXPIRE_BUFFER=300000
VITE_AUTO_LOGOUT_TIMEOUT=1800000

# 认证重定向配置
VITE_LOGIN_REDIRECT_PATH=/login
VITE_DEFAULT_REDIRECT_PATH=/dashboard
VITE_LOGOUT_REDIRECT_PATH=/login

# ==================== 主题和UI配置 ====================
# 应用主题配置
VITE_DEFAULT_THEME=light
VITE_THEME_STORAGE_KEY=trademaster_theme
VITE_AVAILABLE_THEMES=["light","dark","auto"]

# 语言和国际化配置
VITE_DEFAULT_LANGUAGE=zh-CN
VITE_LANGUAGE_STORAGE_KEY=trademaster_language
VITE_AVAILABLE_LANGUAGES=["zh-CN","en-US"]
VITE_FALLBACK_LANGUAGE=en-US

# ==================== 数据和缓存配置 ====================
# 本地存储配置
VITE_STORAGE_PREFIX=trademaster_
VITE_CACHE_DURATION=3600000
VITE_MAX_CACHE_SIZE=50485760

# 数据刷新配置
VITE_AUTO_REFRESH_INTERVAL=30000
VITE_BACKGROUND_REFRESH=true
VITE_REFRESH_ON_FOCUS=true
VITE_REFRESH_ON_RECONNECT=true

# ==================== 图表和可视化配置 ====================
# 图表库配置
VITE_CHART_LIBRARY=echarts
VITE_CHART_THEME=default
VITE_CHART_ANIMATION=true
VITE_MAX_DATA_POINTS=10000

# 实时数据配置
VITE_REALTIME_UPDATE_INTERVAL=5000
VITE_MAX_REALTIME_CONNECTIONS=10
VITE_BUFFER_SIZE=1000

# ==================== 文件上传配置 ====================
# 文件上传限制
VITE_MAX_FILE_SIZE=104857600
VITE_ALLOWED_FILE_TYPES=[".csv",".json",".xlsx",".xls",".parquet"]
VITE_UPLOAD_CHUNK_SIZE=1048576
VITE_MAX_CONCURRENT_UPLOADS=3

# 拖拽上传配置
VITE_ENABLE_DRAG_DROP=true
VITE_DRAG_DROP_MULTIPLE=true

# ==================== 性能和优化配置 ====================
# 渲染优化配置
VITE_ENABLE_VIRTUAL_SCROLLING=true
VITE_VIRTUAL_SCROLL_THRESHOLD=100
VITE_DEBOUNCE_DELAY=300
VITE_THROTTLE_DELAY=100

# 懒加载配置
VITE_ENABLE_LAZY_LOADING=true
VITE_LAZY_LOAD_THRESHOLD=0.1
VITE_PRELOAD_ROUTES=["dashboard","portfolio"]

# ==================== 错误处理和监控配置 ====================
# 错误边界配置
VITE_ENABLE_ERROR_BOUNDARY=true
VITE_ERROR_FALLBACK_COMPONENT=ErrorFallback
VITE_AUTO_ERROR_RECOVERY=true

# Sentry错误追踪配置
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_RELEASE=1.0.0
VITE_SENTRY_SAMPLE_RATE=0.1

# ==================== 分析和统计配置 ====================
# Google Analytics配置
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_GA_ENABLED=true
VITE_GA_ANONYMIZE_IP=true

# 用户行为分析
VITE_ENABLE_USER_ANALYTICS=true
VITE_ANALYTICS_ENDPOINT=/analytics
VITE_ANALYTICS_BATCH_SIZE=10
VITE_ANALYTICS_FLUSH_INTERVAL=30000

# ==================== CDN和资源配置 ====================
# 静态资源CDN配置
VITE_CDN_BASE_URL=https://cdn.yourdomain.com
VITE_STATIC_ASSET_URL=https://static.yourdomain.com
VITE_IMAGE_CDN_URL=https://images.yourdomain.com

# 资源压缩配置
VITE_ENABLE_COMPRESSION=true
VITE_COMPRESSION_ALGORITHM=gzip
VITE_MIN_COMPRESSION_SIZE=1024

# ==================== PWA配置 ====================
# Progressive Web App配置
VITE_PWA_NAME=TradeMaster Web
VITE_PWA_SHORT_NAME=TradeMaster
VITE_PWA_DESCRIPTION=TradeMaster Web Interface
VITE_PWA_THEME_COLOR=#1890ff
VITE_PWA_BACKGROUND_COLOR=#ffffff

# 离线配置
VITE_ENABLE_OFFLINE=true
VITE_OFFLINE_CACHE_STRATEGY=CacheFirst
VITE_OFFLINE_FALLBACK_PAGE=/offline.html

# ==================== 开发工具配置 ====================
# 开发服务器配置
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_HTTPS=false
VITE_DEV_SERVER_CORS=true

# 热重载配置
VITE_HMR_ENABLED=true
VITE_HMR_PORT=24678
VITE_HMR_OVERLAY=true

# 开发工具集成
VITE_ENABLE_DEVTOOLS=false
VITE_REACT_DEVTOOLS=false
VITE_REDUX_DEVTOOLS=false

# ==================== 构建配置 ====================
# 构建优化配置
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
VITE_BUILD_TARGET=es2018
VITE_BUILD_OUTDIR=dist

# 代码分割配置
VITE_ENABLE_CODE_SPLITTING=true
VITE_CHUNK_SIZE_WARNING_LIMIT=500
VITE_MAX_CHUNK_SIZE=1000

# ==================== 安全配置 ====================
# 内容安全策略
VITE_CSP_ENABLED=true
VITE_CSP_NONCE_ENABLED=true
VITE_TRUSTED_DOMAINS=["yourdomain.com","api.yourdomain.com"]

# XSS保护
VITE_XSS_PROTECTION=true
VITE_CONTENT_TYPE_NOSNIFF=true
VITE_FRAME_OPTIONS=DENY

# ==================== 第三方服务配置 ====================
# 地图服务配置（如果使用）
VITE_MAP_API_KEY=your-map-api-key
VITE_MAP_PROVIDER=amap
VITE_MAP_DEFAULT_ZOOM=10

# 支付服务配置（如果使用）
VITE_PAYMENT_PROVIDER=stripe
VITE_PAYMENT_PUBLIC_KEY=pk_test_your_stripe_public_key

# ==================== 环境特定配置 ====================
# 开发环境配置
VITE_DEV_API_BASE_URL=http://localhost:8000/api/v1
VITE_DEV_WS_URL=ws://localhost:8000/ws
VITE_DEV_DEBUG=true

# 测试环境配置
VITE_TEST_API_BASE_URL=https://test-api.yourdomain.com/api/v1
VITE_TEST_WS_URL=wss://test-api.yourdomain.com/ws
VITE_TEST_DEBUG=true

# 生产环境配置
VITE_PROD_API_BASE_URL=https://api.yourdomain.com/api/v1
VITE_PROD_WS_URL=wss://api.yourdomain.com/ws
VITE_PROD_DEBUG=false

# ==================== 实验性功能配置 ====================
# 实验性功能开关
VITE_ENABLE_EXPERIMENTAL_FEATURES=false
VITE_EXPERIMENTAL_CHART_ENGINE=false
VITE_EXPERIMENTAL_AI_ASSISTANT=false
VITE_EXPERIMENTAL_VOICE_CONTROL=false

# Beta功能配置
VITE_ENABLE_BETA_FEATURES=false
VITE_BETA_TESTER_MODE=false

# ==================== 配置文件使用说明 ====================
#
# 📝 配置步骤:
# 1. 复制此文件为 .env 文件
# 2. 根据实际环境修改配置值
# 3. 配置第三方服务的API密钥
# 4. 根据需要启用或禁用功能开关
#
# 🔧 Vite环境变量规则:
# - 只有以 VITE_ 开头的变量会被暴露到客户端代码
# - NODE_ENV 会自动被 Vite 设置
# - 可以使用 import.meta.env.VITE_VARIABLE_NAME 访问变量
#
# ⚠️ 安全注意事项:
# - 前端环境变量会被打包到客户端代码中
# - 不要在前端环境变量中存放敏感信息
# - API密钥应该是公开可用的客户端密钥
# - 敏感配置应该在后端处理
#
# 🚀 性能优化建议:
# - 合理配置缓存策略
# - 启用代码分割和懒加载
# - 配置CDN加速静态资源
# - 启用PWA提升用户体验
#
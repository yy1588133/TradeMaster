# ==================== TradeMaster Web Interface 生产环境配置 ====================
# 基础项目配置
PROJECT_NAME=TradeMaster Web Interface
VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
NODE_ENV=production
ENVIRONMENT=production

# 服务器端口配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
BACKEND_PORT=8000
FRONTEND_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443

# 数据库配置
POSTGRES_SERVER=postgres
POSTGRES_USER=trademaster
POSTGRES_PASSWORD=POSTGRES_PASSWORD
POSTGRES_DB=trademaster_web
POSTGRES_PORT=5432

# Redis缓存配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=REDIS_PASSWORD

# 安全和认证配置
SECRET_KEY=SECRET_KEY
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS配置
BACKEND_CORS_ORIGINS=https://localhost,https://127.0.0.1

# TradeMaster集成配置
TRADEMASTER_API_URL=http://trademaster-core:8080
TRADEMASTER_DATA_PATH=/app/trademaster_data
TRADEMASTER_DATA_ROOT=/opt/trademaster/shared

# 前端应用配置
REACT_APP_API_BASE_URL=https://localhost/api/v1
REACT_APP_WS_URL=wss://localhost/ws
REACT_APP_ENVIRONMENT=production
REACT_APP_DEBUG=false

# 生产配置
AUTO_RELOAD=true
SHOW_ERROR_DETAILS=false
ENABLE_DOCS=true
ENABLE_METRICS=true

# 构建配置
BUILD_ENV=production
BUILD_DATE=2025-08-17T14:00:00Z

# 容器资源配置
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=2048

# 监控配置
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=GRAFANA_ADMIN_PASSWORD
GRAFANA_PORT=3001
PROMETHEUS_PORT=9090

# 备份配置
BACKUP_RETENTION_DAYS=7

# 时区配置
TZ=Asia/Shanghai

# Docker配置
PWD=.
DATA_ROOT=/opt/trademaster
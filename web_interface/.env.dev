# ==================== TradeMaster Web Interface 开发环境配置 ====================
# 开发环境环境变量配置文件
# 注意: 此文件包含开发环境的配置，不要在生产环境中使用

# ==================== 基础配置 ====================
# 项目信息
PROJECT_NAME=TradeMaster Web Interface (Dev)
VERSION=1.0.0-dev
DEBUG=true
LOG_LEVEL=DEBUG

# 环境标识
NODE_ENV=development
ENVIRONMENT=development

# ==================== 服务器配置 ====================
# 后端服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
BACKEND_PORT=8000
BACKEND_DEBUG_PORT=5678

# 前端开发服务器配置
FRONTEND_PORT=3000

# Nginx代理配置
NGINX_PORT=80
GATEWAY_HTTP_PORT=80
GATEWAY_HTTPS_PORT=443

# ==================== 数据库配置 ====================
# PostgreSQL配置
POSTGRES_SERVER=localhost
POSTGRES_USER=trademaster
POSTGRES_PASSWORD=dev_password_123
POSTGRES_DB=trademaster_web
POSTGRES_PORT=5432

# 数据库连接池配置
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ==================== Redis配置 ====================
# Redis服务配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false

# 缓存配置
CACHE_EXPIRE_SECONDS=1800
CACHE_KEY_PREFIX=trademaster:dev:

# ==================== 安全配置 ====================
# JWT配置
SECRET_KEY=dev-secret-key-change-in-production-123456789
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# 密码策略
MIN_PASSWORD_LENGTH=6
REQUIRE_SPECIAL_CHARS=false

# ==================== CORS配置 ====================
# 允许的跨域源
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://localhost:80,http://127.0.0.1:80
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ==================== TradeMaster集成配置 ====================
# TradeMaster核心服务
TRADEMASTER_API_URL=http://localhost:8080
TRADEMASTER_API_TIMEOUT=300
TRADEMASTER_API_RETRY_ATTEMPTS=3
TRADEMASTER_API_RETRY_DELAY=5
TRADEMASTER_PORT=8080

# TradeMaster数据路径
TRADEMASTER_DATA_PATH=/app/trademaster_data
TRADEMASTER_WORKSPACE=/workspace

# ==================== 前端应用配置 ====================
# React应用配置
REACT_APP_API_BASE_URL=http://localhost:8000/api/v1
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG=true

# 前端构建配置
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=false
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# ==================== 文件存储配置 ====================
# 上传配置
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=104857600
ALLOWED_EXTENSIONS=.csv,.json,.xlsx,.xls,.parquet,.py,.ipynb

# 存储目录
DATA_DIR=data
MODEL_DIR=models
LOG_DIR=logs
TEMP_DIR=temp

# ==================== 开发工具配置 ====================
# 开发特殊配置
AUTO_RELOAD=true
SHOW_ERROR_DETAILS=true
ENABLE_DOCS=true

# 代码质量工具
ENABLE_LINT=true
ENABLE_TYPE_CHECK=true

# ==================== 监控和日志配置 ====================
# 日志配置
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=

# ==================== 第三方服务配置 ====================
# 邮件配置（开发环境使用MailHog）
SMTP_TLS=false
SMTP_SSL=false
SMTP_PORT=1025
SMTP_HOST=mailhog
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@trademaster.dev
EMAILS_FROM_NAME=TradeMaster Dev Team

# MailHog配置
MAILHOG_WEB_PORT=8025
MAILHOG_SMTP_PORT=1025

# ==================== API限流配置 ====================
# 开发环境宽松的限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# ==================== WebSocket配置 ====================
WEBSOCKET_ENABLED=true
WEBSOCKET_MAX_CONNECTIONS=100
WEBSOCKET_HEARTBEAT_INTERVAL=30

# ==================== 数据处理配置 ====================
DATA_PROCESSING_CHUNK_SIZE=1000
DATA_PROCESSING_MAX_WORKERS=2

# ==================== 模型训练配置 ====================
TRAINING_MAX_CONCURRENT_JOBS=1
TRAINING_CHECKPOINT_INTERVAL=50
TRAINING_EARLY_STOPPING_PATIENCE=5

# ==================== Docker配置 ====================
# Docker Compose相关配置
COMPOSE_PROJECT_NAME=trademaster-dev
COMPOSE_FILE=docker-compose.dev.yml

# 构建配置
BUILD_ENV=development
PIP_INDEX_URL=https://pypi.org/simple/

# 资源限制（开发环境较为宽松）
POSTGRES_MEMORY_LIMIT=1g
REDIS_MEMORY_LIMIT=256m
BACKEND_MEMORY_LIMIT=2g
FRONTEND_MEMORY_LIMIT=512m

# ==================== 网络配置 ====================
# Docker网络配置
DOCKER_NETWORK_SUBNET=172.20.0.0/16
DOCKER_NETWORK_GATEWAY=172.20.0.1

# ==================== 开发工具服务配置 ====================
# pgAdmin配置
PGADMIN_EMAIL=admin@trademaster.dev
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# Redis Commander配置
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin123
REDIS_COMMANDER_PORT=8081

# ==================== 数据卷配置 ====================
# 数据存储根目录
DATA_ROOT=./docker/volumes

# 工作目录
PWD=.

# 时区配置
TZ=Asia/Shanghai

# ==================== 扩展配置 ====================
# 集成模式配置（用于docker-compose.extended.yml）
WEB_POSTGRES_USER=trademaster
WEB_POSTGRES_PASSWORD=dev_password_123
WEB_POSTGRES_DB=trademaster_web
WEB_SECRET_KEY=dev-web-secret-key-123456789
WEB_CORS_ORIGINS=http://localhost:3000,http://localhost:80

# TradeMaster集成路径
TRADEMASTER_DATA_ROOT=./data
TRADEMASTER_WORKSPACE=./workspace

# ==================== 调试配置 ====================
# Python调试配置
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Node.js调试配置
NODE_OPTIONS=--max-old-space-size=4096

# ==================== 开发环境特殊说明 ====================
# 1. 此配置文件用于开发环境，密码和密钥都是示例值
# 2. 在生产环境中必须使用强密码和随机密钥
# 3. 开发环境启用了详细的错误信息和调试功能
# 4. 资源限制较为宽松，适合开发和调试
# 5. 启用了各种开发工具和监控界面
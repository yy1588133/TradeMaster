    },
    {
      "label": "üß™ Run Backend Tests",
      "type": "shell",
      "command": "pytest",
      "args": [
        "tests/",
        "-v",
        "--cov=app",
        "--cov-report=html",
        "--cov-report=term-missing"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "options": {
        "cwd": "${workspaceFolder}/web_interface/backend"
      },
      "problemMatcher": {
        "owner": "pytest",
        "fileLocation": ["relative", "${workspaceFolder}/web_interface/backend"],
        "pattern": [
          {
            "regexp": "^(.*):(\\d+): (FAILED|ERROR)(.*)$",
            "file": 1,
            "line": 2,
            "severity": 3,
            "message": 4
          }
        ]
      }
    },
    {
      "label": "üß™ Run Frontend Tests",
      "type": "shell", 
      "command": "pnpm",
      "args": ["test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "options": {
        "cwd": "${workspaceFolder}/web_interface/frontend"
      },
      "problemMatcher": {
        "owner": "vitest",
        "fileLocation": ["relative", "${workspaceFolder}/web_interface/frontend"],
        "pattern": {
          "regexp": "^\\s*(.*)\\s+(.*):(\\d+):(\\d+)$",

    {
      "// ==================== ÊµãËØï‰ªªÂä° ====================": "",
      "label": "üß™ Run All Tests",
      "type": "shell",
      "command": "make",
      "args": ["test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
